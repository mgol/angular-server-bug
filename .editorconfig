# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[{package,tslint,tsconfig*,src/tsconfig*,e2e/tsconfig*.angular-cli}.json]
indent_size = 2

[*.md]
max_line_length = off

[{*.py,*.js,.eslintrc.json}]
indent_size = 4
